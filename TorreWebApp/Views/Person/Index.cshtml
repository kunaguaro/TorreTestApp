@{ ViewData["Title"] = "Person"; }

<header style="background-color: darkslateblue !important;border-radius: 5px;" id="header-descripcion">
    <h2>Person <small style="color:gold"><span style="padding-right:5px; padding-left:5px" class="glyphicon glyphicon-th-list"></span>List</small></h2>
</header>

<div id="filterContent" class="row row-no-gutters" style="background-color: white; border-radius: 5px;">
    @{ await Html.RenderPartialAsync("_PersonFilter"); }
</div>
<div style="padding-top:5px;"></div>

<div id="resultContent" class="row row-no-gutters" style="background-color: white; border-radius: 5px; padding:5px 5px 5px 5px;">
    @{ await Html.RenderPartialAsync("_PersonList"); }
</div>
<div id="resultContentDetail" class="row row-no-gutters" style="background-color: white; border-radius: 5px; padding:5px 5px 5px 5px;">

</div>





@section scripts{

    <script src="~/scripts/person/index-person.js"></script>

}
